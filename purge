#! /bin/bash
echo "Purge tool - aGrUM 2011-13"
echo "cleans aGrum and removes cocoR/swig generated files."
echo "If cocoR or swig is not installed, just 'git ls-files -d | xargs git checkout --' to retrieve removed files."
echo
read -p "Press any key to proceed ..." -n 1 -s
echo

python act clean

echo "Removing cocoR generated files"
find . -name "Parser.h" -print | xargs rm -f
find . -name "Parser.cpp" -print | xargs rm -f
find . -name "Scanner.h" -print | xargs rm -f
find . -name "Scanner.cpp" -print | xargs rm -f

echo "Removing swig generated files"
rm -f wrappers/pyAgrum/generated-files/*